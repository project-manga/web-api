<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="info"
      internalLogFile=".\internal-nlog.txt">


  <!-- the targets to write to -->
  <targets>
    <!-- write logs to file  -->
    <target xsi:type="File" name="all" fileName=".\complete-${shortdate}.log"
            layout="[${longdate}][${event-properties:item=EventId.Id}][${uppercase:${level}}]${logger}]${message} ${exception}" />
    
    <target xsi:type="File" name="web" fileName=".\pm-web-${shortdate}.log"
            layout="[${longdate}][${event-properties:item=EventId.Id}][${uppercase:${level}}]${logger}]${message} ${exception}" />
    
    <target xsi:type="File" name="domain" fileName=".\pm-domain-${shortdate}.log"
            layout="[${longdate}][${event-properties:item=EventId.Id}][${uppercase:${level}}]${logger}]${message} ${exception}" />

    <!-- another file log, only own logs. Uses some ASP.NET core renderers -->
    <target xsi:type="File" name="aspnet" fileName=".\asp-net-${shortdate}.log"
            layout="[${longdate}][${event-properties:item=EventId.Id}][${uppercase:${level}}][${logger}][url: ${aspnet-request-url}][action: ${aspnet-mvc-action}]${message} ${exception}" />

    <!-- write to the void aka just remove -->
    <target xsi:type="Null" name="blackhole" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!--All logs, including from Microsoft-->
    <logger name="*" minlevel="Trace" writeTo="all" />
    
    <!-- Stgm logs -->
    <logger name="ProjectManga.Web.*" minlevel="Trace" writeTo="web" />
    <logger name="ProjectManga.Domain.*" minlevel="Trace" writeTo="domain" />

    <!--Skip Microsoft logs and so log only own logs-->
    <logger name="Microsoft.*" minlevel="Trace" writeTo="aspnet" />
  </rules>
</nlog>